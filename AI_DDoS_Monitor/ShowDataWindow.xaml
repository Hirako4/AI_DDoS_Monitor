<Window x:Class="AI_DDoS_Monitor.Windows.ShowDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Показать данные" Height="500" Width="800"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignFonts;component/Roboto/#Roboto">
    <TabControl Margin="10" Style="{StaticResource MaterialDesignTabControl}">
        <TabItem Header="Датасеты">
            <DataGrid Name="DatasetsGrid" AutoGenerateColumns="True" 
                      Style="{StaticResource MaterialDesignDataGrid}" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column" />
        </TabItem>
        <TabItem Header="Эксперименты">
            <DataGrid Name="ExperimentsGrid" AutoGenerateColumns="True" 
                      Style="{StaticResource MaterialDesignDataGrid}" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column" />
        </TabItem>
        <TabItem Header="Запуски">
            <DataGrid Name="RunsGrid" AutoGenerateColumns="True" 
                      Style="{StaticResource MaterialDesignDataGrid}" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column" />
        </TabItem>
        <TabItem Header="Схемы">
            <DataGrid Name="SchemasGrid" AutoGenerateColumns="True" />
        </TabItem>
    </TabControl>
</Window>